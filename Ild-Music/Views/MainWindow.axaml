                                                        55.00,6.00 55.00,29.00 55.00,29.00
                                                        55.00,29.00 45.00,29.00 45.00,29.00
                                                        45.00,29.00 45.00,6.00 45.00,6.00 Z
                                                    M 90.00,6.00
                                                    C 90.00,6.00 100.00,6.00 100.00,6.00
                                                        100.00,6.00 100.00,29.00 100.00,29.00
                                                        100.00,29.00 90.00,29.00 90.00,29.00
                                                        90.00,29.00 90.00,6.00 90.00,6.00 Z
                                                    M 120.00,6.00
                                                    C 120.00,6.00 130.00,6.00 130.00,6.00
                                                        130.00,6.00 130.00,29.00 130.00,29.00
                                                        130.00,29.00 120.00,29.00 120.00,29.00
                                                        120.00,29.00 120.00,6.00 120.00,6.00 Z
                                                    M 0.00,14.00
                                                    C 0.00,14.00 10.00,14.00 10.00,14.00
                                                        10.00,14.00 10.00,29.00 10.00,29.00
                                                        10.00,29.00 0.00,29.00 0.00,29.00
                                                        0.00,29.00 0.00,14.00 0.00,14.00 Z
                                                    M 60.00,14.00
                                                    C 60.00,14.00 70.00,14.00 70.00,14.00
                                                        70.00,14.00 70.00,29.00 70.00,29.00
                                                        70.00,29.00 60.00,29.00 60.00,29.00
                                                        60.00,29.00 60.00,14.00 60.00,14.00 Z
                                                    M 75.00,14.00
                                                    C 75.00,14.00 85.00,14.00 85.00,14.00
                                                        85.00,14.00 85.00,29.00 85.00,29.00
                                                        85.00,29.00 75.00,29.00 75.00,29.00
                                                        75.00,29.00 75.00,14.00 75.00,14.00 Z
                                                    M 135.00,14.00
                                                    C 135.00,14.00 145.00,14.00 145.00,14.00
                                                        145.00,14.00 145.00,29.00 145.00,29.00
                                                        145.00,29.00 135.00,29.00 135.00,29.00
                                                        135.00,29.00 135.00,14.00 135.00,14.00 Z" />
                                        </Canvas>
                                    </Viewbox>

                                    <Border x:Name="SearchBar"
                                            CornerRadius="15"
                                            BorderBrush="{StaticResource color1}"
                                            BorderThickness="1"
                                            Margin="10">
                                        <StackPanel Orientation="Horizontal"
                                                    HorizontalAlignment="Stretch">
                                            <TextBox x:Name="SearchBox"
                                                     Text="{Binding SearchPhrase, Mode=TwoWay}"
                                                     Width="170"
                                                     Watermark="Search here"
                                                     Background="Transparent"
                                                     HorizontalAlignment="Stretch"
                                                     BorderThickness="0"
                                                     KeyDown="SearchBarTyped">
                                                <TextBox.Styles>
                                                    <Style Selector="#SearchBar TextBox">
                                                      <Setter Property="BorderThickness" Value="0"/>
                                                      <Setter Property="Background" Value="Transparent"/>
                                                      <Setter Property="BorderBrush" Value="{StaticResource btnApplyColor1}"/>
                                                      <Setter Property="SelectionBrush" Value="#0b3338"/>
                                                    </Style>

                                                    <Style Selector="#SearchBar:pointerover TextBox /template/ Border#PART_BorderElement">
                                                      <Setter Property="BorderThickness" Value="0"/>
                                                      <Setter Property="Background" Value="Transparent"/>
                                                      <Setter Property="BorderBrush" Value="{StaticResource btnApplyColor1}"/>
                                                    </Style>

                                                    <Style Selector="#SearchBar:focus TextBox /template/ Border#PART_BorderElement">
                                                      <Setter Property="BorderThickness" Value="0"/>
                                                      <Setter Property="Background" Value="Transparent"/>
                                                      <Setter Property="BorderBrush" Value="{StaticResource btnApplyColor1}"/>
                                                    </Style>

                                                    <Style Selector="#SearchBar:focus:pointerover TextBox /template/ Border#PART_BorderElement">
                                                      <Setter Property="BorderThickness" Value="0"/>
                                                      <Setter Property="Background" Value="Transparent"/>
                                                      <Setter Property="BorderBrush" Value="{StaticResource btnApplyColor1}"/>
                                                    </Style>

                                                    <Style Selector="#SearchBox:pointerover /template/ Border#PART_BorderElement">
                                                      <Setter Property="BorderThickness" Value="0"/>
                                                      <Setter Property="Background" Value="Transparent"/>
                                                      <Setter Property="BorderBrush" Value="{StaticResource btnApplyColor1}"/>
                                                    </Style>

                                                    <Style Selector="#SearchBox:focus /template/ Border#PART_BorderElement">
                                                      <Setter Property="BorderThickness" Value="0"/>
                                                      <Setter Property="Background" Value="Transparent"/>
                                                      <Setter Property="BorderBrush" Value="{StaticResource btnApplyColor1}"/>
                                                    </Style>

                                                    <Style Selector="#SearchBox:focus:pointerover /template/ Border#PART_BorderElement">
                                                      <Setter Property="BorderThickness" Value="0"/>
                                                      <Setter Property="Background" Value="Transparent"/>
                                                      <Setter Property="BorderBrush" Value="{StaticResource btnApplyColor1}"/>
                                                    </Style>
                                                </TextBox.Styles>
                                            </TextBox>
                                            
                                            <Border Classes="SearchButton"
                                                    Width="15"
                                                    Height="15"
                                                    Margin="5"
                                                    BorderThickness="0"
                                                    CornerRadius="5"
                                                    HorizontalAlignment="Right"
                                                    VerticalAlignment="Center"
                                                    IsVisible="{Binding SearchPhrase, TargetNullValue=False}">
                                                <i:Interaction.Behaviors>
                                                    <ia:EventTriggerBehavior EventName="PointerPressed">
                                                        <ia:InvokeCommandAction Command="{Binding SearchAreaHideCommand}"/>
                                                    </ia:EventTriggerBehavior>  
                                                </i:Interaction.Behaviors>
                                                <PathIcon HorizontalAlignment="Center"
                                                            VerticalAlignment="Center"
                                                            Width="20"
                                                            Height="20"
                                                            Background="Transparent"
                                                            Data="M19,6.41L17.59,5L12,10.59L6.41,5L5,6.41L10.59,12L5,17.59L6.41,19L12,13.41L17.59,19L19,17.59L13.41,12L19,6.41Z">
                                                  </PathIcon>
                                            </Border>

                                            <Border Classes="SearchButton"
                                                    Width="15"
                                                    Height="15"
                                                    Margin="5, 0, 10, 0"
                                                    BorderThickness="0"
                                                    CornerRadius="5"
                                                    HorizontalAlignment="Right"
                                                    VerticalAlignment="Center">
                                                <i:Interaction.Behaviors>
                                                    <ia:EventTriggerBehavior EventName="PointerPressed">
                                                        <ia:InvokeCommandAction Command="{Binding SearchCommand}"/>
                                                    </ia:EventTriggerBehavior>  
                                                </i:Interaction.Behaviors>
                                              <PathIcon HorizontalAlignment="Center"
                                                        VerticalAlignment="Center"
                                                        Width="20"
                                                        Height="20"
                                                        Background="Transparent"
                                                        Data="M9.5,3A6.5,6.5 0 0,1 16,9.5C16,11.11 15.41,12.59 14.44,13.73L14.71,14H15.5L20.5,19L19,20.5L14,15.5V14.71L13.73,14.44C12.59,15.41 11.11,16 9.5,16A6.5,6.5 0 0,1 3,9.5A6.5,6.5 0 0,1 9.5,3M9.5,5C7,5 5,7 5,9.5C5,12 7,14 9.5,14C12,14 14,12 14,9.5C14,7 12,5 9.5,5Z"/>
                                            </Border>
                                        </StackPanel>
                                    </Border>

                                    <ScrollViewer HorizontalScrollBarVisibility="Disabled"
                                                VerticalScrollBarVisibility="Auto"
                                                HorizontalAlignment="Center">
                                        <ListBox ItemsSource="{Binding NavItems}"
                                                SelectedItem="{Binding NavItem}"
                                                HorizontalAlignment="Left"
                                                ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                                                ScrollViewer.VerticalScrollBarVisibility="Disabled"
                                                Background="transparent">
                                            <ListBox.ItemsPanel>
                                                <ItemsPanelTemplate>
                                                    <StackPanel Orientation="Vertical"/>
                                                </ItemsPanelTemplate>
                                            </ListBox.ItemsPanel>
            
                                            <ListBox.Styles>
                                                    <Style Selector="ListBoxItem">
                                                        <Setter Property="BorderBrush" Value="Transparent"/>
                                                        <Setter Property="BorderThickness" Value="0"/>
                                                        <Setter Property="Margin" Value="0"/>
                                                        <Setter Property="Padding" Value="0"/>
                                                        <Setter Property="HorizontalContentAlignment" Value="Left"/>

                                                        <Setter Property="Template">
                                                            <ControlTemplate>
                                                                <Grid>
                                                                    <Border x:Name="Bd"
                                                                            Margin="{TemplateBinding Margin}"
                                                                            CornerRadius="10"
                                                                            Background="{TemplateBinding Background}"
                                                                            BorderThickness="{TemplateBinding BorderThickness}"
                                                                            BorderBrush="{TemplateBinding BorderBrush}"
                                                                            Padding="{TemplateBinding Padding}">
                                                                    <ContentPresenter Name="PART_ContentPresenter"
                                                                                        HorizontalContentAlignment="{TemplateBinding HorizontalContentAlignment}"
                                                                                        VerticalContentAlignment="{TemplateBinding VerticalContentAlignment}"
                                                                                        ContentTemplate="{TemplateBinding ContentTemplate}"
                                                                                        Content="{TemplateBinding Content}"/>
                                                                    </Border>
                                                                </Grid>
                                                            </ControlTemplate>
                                                        </Setter>
                                                    </Style>

                                                    <Style Selector="ListBoxItem:pointerover /template/ Border#Bd">
                                                        <Setter Property="Background" Value="Transparent"/>
                                                    </Style>

                                                    <Style Selector="ListBoxItem:pointerover /template/ ContentPresenter">
                                                        <Setter Property="Background" Value="Transparent"/>
                                                    </Style>

                                                    <Style Selector="ListBoxItem:selected /template/ Border#Bd">
                                                        <Setter Property="Background" Value="Transparent"/>
                                                    </Style>

                                                    <Style Selector="ListBoxItem:selected /template/ ContentPresenter">
                                                        <Setter Property="Background" Value="Transparent"/>
                                                    </Style>
                                            
                                                    <Style Selector="ListBoxItem:selected:focus /template/ Border#Bd">
                                                        <Setter Property="Background" Value="Transparent"/>
                                                    </Style>
                    
                                                    <Style Selector="ListBoxItem:selected:focus /template/ ContentPresenter">
                                                        <Setter Property="Background" Value="Transparent"/>
                                                    </Style>

                                                    <Style Selector="ListBoxItem:selected:pointerover /template/ Border#Bd">
                                                        <Setter Property="Background" Value="Transparent"/>
                                                    </Style>

                                                    <Style Selector="ListBoxItem:selected:pointerover /template/ ContentPresenter">
                                                        <Setter Property="Background" Value="Transparent"/>
                                                    </Style>

                                                    <Style Selector="ListBoxItem:selected:focus:pointerover /template/ Border#Bd">
                                                        <Setter Property="Background" Value="Transparent"/>
                                                    </Style>

                                                    <Style Selector="ListBoxItem:selected:focus:pointerover /template/ ContentPresenter">
                                                        <Setter Property="Background" Value="Transparent"/>
                                                    </Style>
                                            </ListBox.Styles>
                        
                                            <i:Interaction.Behaviors>
                                                <ia:EventTriggerBehavior EventName="Tapped">
                                                    <ia:InvokeCommandAction Command="{Binding NavBarResolve}"/>
                                                </ia:EventTriggerBehavior>  
                                            </i:Interaction.Behaviors>
                                            <ListBox.ItemTemplate>
                                                <DataTemplate>         
                                                    <Border Classes="NavBarItem"
                                                            VerticalAlignment="Top"
                                                            HorizontalAlignment="Center"
                                                            CornerRadius="10"
                                                            Margin="8, 2"
                                                            Width="200">
                                                        <Border.Styles>
                                                            <Style Selector="Border.NavBarItem Viewbox Canvas Path.NavIcon">
                                                                <Setter Property="Fill" Value="#7b7f6b"/>
                                                            </Style>
                                                        </Border.Styles>

                                                        <StackPanel Orientation="Horizontal"
                                                                    HorizontalAlignment="Left">
                                                        <Viewbox Classes="vb"
                                                                Width="25"
                                                                Height="25"
                                                                Margin="10, 5"
                                                                HorizontalAlignment="Left"
                                                                Child="{Binding ., Converter={StaticResource NavBarConverter}}"/>
                                                        <Label FontSize="16"
                                                            Margin="5"
                                                            FontWeight="Regular"
                                                            Content = "{Binding .}"/>
                                                        </StackPanel>
                                                    </Border>
                                                </DataTemplate>
                                            </ListBox.ItemTemplate>
                                        </ListBox>
                                    </ScrollViewer>
                                </StackPanel>
                            </Grid>      

                            <!--ContextArea-->
                            <Grid Grid.Column="2"
                                  Grid.ColumnSpan="2">
                                <Grid.RowDefinitions>                                        
                                    <RowDefinition Height="auto"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>

                                <Grid Grid.Row="0" ZIndex="3">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="auto"/>
                                    </Grid.ColumnDefinitions>
                                    
                                    <!--DragMove area-->                          
                                    <Grid x:Name="DragBar"
                                        Grid.Column="0"
                                        Background="Transparent"/>

                                    <StackPanel Grid.Column="1"
                                            HorizontalAlignment="Right"
                                            Orientation="Horizontal">                                                                             
                                        <Border Classes="WindowButton"
                                                Width="40"
                                                Height="40"
                                                Background="Transparent"
                                                Child="{StaticResource MinimizeHead}"
                                                PointerPressed="OnHideClick"/>
                                        <Border Classes="WindowButton"
                                                Width="40"
                                                Height="40"
                                                Background="Transparent"
                                                Child="{StaticResource MaximizeHead}"
                                                PointerPressed="OnExpandClick"/>
                                        <Border Classes="WindowButton"
                                                Width="40"
                                                Height="40"
                                                Background="Transparent"
                                                Child="{StaticResource CloseHead}"
                                                PointerPressed="OnCloseClick"/>
                                    </StackPanel>
                                </Grid>
                               
                                <Grid Grid.Row="0"
                                      Grid.RowSpan="2">
                                    <ContentControl Content="{Binding CurrentVM}"/> 
                                </Grid>
                            </Grid>
                        </Grid>

                        <!--Player-->
                        <Grid Grid.Row="2"
                              ColumnSpan="3"
                              Height="40"
                              HorizontalAlignment="Stretch">
                            <Grid.Background>
                                <LinearGradientBrush StartPoint="0%,0%" EndPoint="100%,100%">
                                    <LinearGradientBrush.GradientStops>
                                        <GradientStop Offset="0" Color="#2b2b2b"/>
                                        <GradientStop Offset="1" Color="#212121"/>
                                    </LinearGradientBrush.GradientStops>
                                </LinearGradientBrush>
                            </Grid.Background>

                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="0.5*"/>
                            </Grid.ColumnDefinitions>

                            <!-- Player Buttons Area -->
                            <StackPanel Grid.Column="0"
                                        Orientation="Horizontal"
                                        VerticalAlignment="Top"
                                        HorizontalAlignment="Left"
                                        Margin="15,0,0,0">
                                <Border Classes="PlayerButton"
                                        Background="#00000000"
                                        Margin="0,5">
                                        <i:Interaction.Behaviors>
                                            <ia:EventTriggerBehavior EventName="Tapped">
                                                <ia:InvokeCommandAction Command="{Binding PreviousCommand}"/>
                                            </ia:EventTriggerBehavior>  
                                        </i:Interaction.Behaviors>
                                        <Border>
                                            <Viewbox Classes="vb" Margin="2,0" HorizontalAlignment="Left">
                                                <Canvas Width="30" Height="30">
                                                    <Path Data="M6,6H8V18H6M9.5,12L18,18V6M16,14.14L12.97,12L16,9.86V14.14Z" />
                                                </Canvas>
                                            </Viewbox>
                                        </Border>
                                </Border>
                                
                                <Border Classes="PlayerButton"
                                        Background="#00000000"
                                        Margin="0,5">
                                        <i:Interaction.Behaviors>
                                            <ia:EventTriggerBehavior EventName="Tapped">
                                                <ia:InvokeCommandAction Command="{Binding KickCommand}"/>
                                            </ia:EventTriggerBehavior>  
                                        </i:Interaction.Behaviors>
                                        <Border>
                                            <Viewbox Classes="vb"
                                                        Margin="2,0" 
                                                        HorizontalAlignment="Left">
                                                <Canvas Width="30" Height="30">
                                                    <Path Data="{Binding PlayerState, Converter={StaticResource PlayerToggleButtonConverter}}"/>
                                                </Canvas>
                                            </Viewbox>
                                        </Border>
                                </Border>

                                <Border Classes="PlayerButton"
                                        Background="#00000000"
                                        Margin="0,5">
                                        <i:Interaction.Behaviors>
                                            <ia:EventTriggerBehavior EventName="Tapped">
                                                <ia:InvokeCommandAction Command="{Binding NextCommand}"/>
                                            </ia:EventTriggerBehavior>  
                                        </i:Interaction.Behaviors>
                                        <Border>
                                            <Viewbox Classes="vb" Margin="2,0" HorizontalAlignment="Left">
                                                <Canvas Width="30" Height="30">
                                                    <Path Data="M6,18L14.5,12L6,6M8,9.86L11.03,12L8,14.14M16,6H18V18H16" />
                                                </Canvas>
                                            </Viewbox>
                                        </Border>
                                </Border>

                                <Border Classes="PlayerButton"
                                        Background="#00000000"
                                        Margin="0,5">
                                        <i:Interaction.Behaviors>
                                            <ia:EventTriggerBehavior EventName="Tapped">
                                                <ia:InvokeCommandAction Command="{Binding RepeatCommand}"/>
                                            </ia:EventTriggerBehavior>  
                                        </i:Interaction.Behaviors>
                                        <Border>
                                            <Viewbox Classes="vb" Margin="2,0" HorizontalAlignment="Left">
                                                <Canvas Width="30" Height="30">
                                                    <Path Data="M6,5.75L10.25,10H7V16H13.5L15.5,18H7A2,2 0 0,1 5,16V10H1.75L6,5.75M18,18.25L13.75,14H17V8H10.5L8.5,6H17A2,2 0 0,1 19,8V14H22.25L18,18.25Z" />
                                                </Canvas>
                                            </Viewbox>
                                        </Border>
                                </Border>

                                <Border x:Name="VolumeButton"
                                        Classes="PlayerButton"
                                        CornerRadius="5"
                                        Width="36"
                                        Margin="5">
                                        <i:Interaction.Behaviors>
                                            <ia:EventTriggerBehavior EventName="Tapped">
                                                <ia:InvokeCommandAction Command="{Binding VolumeSliderShowCommand}"/>
                                            </ia:EventTriggerBehavior>  
                                        </i:Interaction.Behaviors>
                                        <Border>
                                            <Viewbox Classes="vb" Margin="2,0" HorizontalAlignment="Center">
                                                <Canvas Width="30" Height="30">
                                                    <Path Data="M7,9V15H11L16,20V4L11,9H7Z" />
                                                </Canvas>
                                            </Viewbox>
                                        </Border>
                                </Border>
                            </StackPanel> 

                            <!-- Slider Area -->
                            <StackPanel x:Name="SliderArea"
                                        Grid.Column="1"
                                        Orientation="Horizontal"
                                        VerticalAlignment="Top"
                                        HorizontalAlignment="Stretch"
                                        Margin="5,3,20,0">
                                <Grid x:Name="SliderParent"
                                        HorizontalAlignment="Stretch">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>
                                    
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>

                                    <Slider x:Name="sldThumby"       
                                            Grid.Row="0"                    
                                            Width="{Binding #SliderArea.Bounds.Width}"
                                            Classes="thumby"                                          
                                            IsEnabled="{Binding PlayerState}"
                                            Orientation="Horizontal"
                                            Maximum="{Binding TotalTime, Mode=OneWay}"
                                            Minimum="{Binding StartTime, Mode=OneWay}"
                                            Value="{Binding CurrentTime, Mode=TwoWay}">
                                            <Slider.Resources>
                                                <x:Double x:Key="SliderHorizontalThumbWidth">13</x:Double>
                                                <GridLength x:Key="SliderPreContentMargin">0</GridLength>
                                                <GridLength x:Key="SliderPostContentMargin">0</GridLength>
                                            </Slider.Resources>
                                            <Slider.Styles>
                                                <Style Selector="Slider.thumby /template/ RepeatButton#PART_DecreaseButton">
                                                    <Setter Property="Background" Value="#34eb64"/>
                                                </Style>

                                                <Style Selector="Slider.thumby /template/ RepeatButton#PART_IncreaseButton">
                                                    <Setter Property="Background" Value="#2b4532"/>
                                                </Style>

                                                <Style Selector="Slider.thumby /template/ Thumb#thumb">
                                                    <Setter Property="Template">
                                                        <ControlTemplate>
                                                            <Grid>
                                                                <Ellipse Width="13"
                                                                            Height="13"
                                                                            Fill="#34eb64"/>
                                                            </Grid>
                                                        </ControlTemplate>
                                                    </Setter>
                                                </Style>
                                            </Slider.Styles>
                                    </Slider>

                                    <Grid Grid.Row="1">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>
                                                <TextBlock Grid.Column="0" 
                                                            Text="{Binding CurrentTimeDisplay, StringFormat=\{0:mm\\:ss\}}"
                                                            Foreground="#6ed48b" 
                                                            Margin="0,-10,0,0"
                                                            FontSize="10"
                                                            FontWeight="Light"
                                                            HorizontalAlignment="Left"/>
                                                <TextBlock Grid.Column="2"
                                                            Text="{Binding TotalTimeDisplay, StringFormat=\{0:mm\\:ss\}}"
                                                            Foreground="#6ed48b"
                                                            Margin="0,-10,0,0"
                                                            FontSize="10"
                                                            FontWeight="Light"
                                                            HorizontalAlignment="Right"/>   
                                    </Grid>
                                </Grid>
                            </StackPanel>

                            <!-- Current Track Area -->
                            <Grid x:Name="CurrentInstanceTray"
                                  Grid.Column="2"
                                  Classes="CurrentTrackArea"
                                  VerticalAlignment="Stretch"
                                  HorizontalAlignment="Stretch"
                                  IsVisible="{Binding CurrentTrack, Converter={StaticResource IndicatorConverter}}">

                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <TextBlock Grid.Column="1"
                                           Margin="5,0"
                                           FontSize="16"
                                           FontWeight="Medium"
                                           Foreground="#fff"
                                           VerticalAlignment="Center"
                                           Text="{Binding Title}">
                                    <i:Interaction.Behaviors>
                                        <ia:EventTriggerBehavior EventName="Tapped">
                                            <ia:InvokeCommandAction Command="{Binding ShowCurrentInstanceTabCommand}"/>
                                        </ia:EventTriggerBehavior>  
                                    </i:Interaction.Behaviors>
                                </TextBlock>

                                <Border Classes="PlayerButton"
                                        Grid.Column="2"
                                        Background="#00000000"
                                        Margin="0,5"
                                        IsVisible="{Binding CurrentTrack, Converter={StaticResource IndicatorConverter}}">
                                        <i:Interaction.Behaviors>
                                            <ia:EventTriggerBehavior EventName="Tapped">
                                                <ia:InvokeCommandAction Command="{Binding ResolveCurrentInstanceCommand}"/>
                                            </ia:EventTriggerBehavior>  
                                        </i:Interaction.Behaviors>
                                        <Border>
                                            <Viewbox Classes="vb" Margin="2,0" HorizontalAlignment="Left">
                                                <Canvas Width="30" Height="30">
                                                    <Path Data="M6,5.75L10.25,10H7V16H13.5L15.5,18H7A2,2 0 0,1 5,16V10H1.75L6,5.75M18,18.25L13.75,14H17V8H10.5L8.5,6H17A2,2 0 0,1 19,8V14H22.25L18,18.25Z" />
                                                </Canvas>
                                            </Viewbox>
                                        </Border>
                                </Border>
                            </Grid>
                        </Grid>
                    </Grid>
                </ControlTemplate>
            </Setter>
        </Style>
    </Window.Styles>

    <Window.KeyBindings>
        <KeyBinding Gesture="Space" Command="{Binding KickCommand}"/>
        <KeyBinding Gesture="Ctrl+Shift+j" Command="{Binding NextCommand}"/>
        <KeyBinding Gesture="Ctrl+Shift+h" Command="{Binding PreviousCommand}"/>
        <KeyBinding Gesture="Ctrl+r" Command="{Binding RepeatCommand}"/>
        <KeyBinding Gesture="Ctrl+x" Command="{Binding ExitCommand}"/>

        <KeyBinding Gesture="Alt+h" Command="{Binding SwitchHomeCommand}"/>
        <KeyBinding Gesture="Alt+l" Command="{Binding SwitchListCommand}"/>
        <KeyBinding Gesture="Alt+b" Command="{Binding SwitchBrowseCommand}"/>
    </Window.KeyBindings>

</Window>
