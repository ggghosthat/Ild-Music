                                        </StackPanel>
                                    </Border>

                                    <Border Width="200"
                                            Margin="8, 2"
                                            CornerRadius="10"
                                            Classes="NavBarItem"
                                            VerticalAlignment="Top"
                                            HorizontalAlignment="Center"
                                            PointerPressed="BrowseNavBarClicked">
                                        <Border.Styles>
                                            <Style Selector="Border.NavBarItem Viewbox Canvas Path.NavIcon">
                                                <Setter Property="Fill" Value="{x:Static assets:Themes.MainWindowButton}"/>
                                            </Style>
                                        </Border.Styles>

                                        <StackPanel Orientation="Horizontal"
                                                    HorizontalAlignment="Left">
                                            <Viewbox Classes="vb"
                                                    Width="25"
                                                    Height="25"
                                                    Margin="10, 5"
                                                    HorizontalAlignment="Left">
                                                <Canvas Width="24"
                                                        Height="24">
                                                    <Path Classes="NavIcon" Data="M12,10L8,14H11V20H13V14H16M19,4H5C3.89,4 3,4.9 3,6V18A2,2 0 0,0 5,20H9V18H5V8H19V18H15V20H19A2,2 0 0,0 21,18V6A2,2 0 0,0 19,4Z" />
                                                </Canvas>
                                            </Viewbox>
                                            
                                            <Label FontSize="16"
                                                    Margin="5"
                                                    FontWeight="Regular"
                                                    Content = "{x:Static assets:Resources.BrowseNavbarItem}"/>
                                        </StackPanel>
                                    </Border>

                                    <Border Width="200"
                                            Margin="8, 2"
                                            CornerRadius="10"
                                            Classes="NavBarItem"
                                            VerticalAlignment="Top"
                                            HorizontalAlignment="Center"
                                            PointerPressed="AboutNavBarClicked">
                                        <Border.Styles>
                                            <Style Selector="Border.NavBarItem Viewbox Canvas Path.NavIcon">
                                                <Setter Property="Fill" Value="{x:Static assets:Themes.MainWindowButton}"/>
                                            </Style>
                                        </Border.Styles>

                                        <StackPanel Orientation="Horizontal"
                                                    HorizontalAlignment="Left">
                                            <Viewbox Classes="vb"
                                                    Width="25"
                                                    Height="25"
                                                    Margin="10, 5"
                                                    HorizontalAlignment="Left">
                                                <Canvas Width="24"
                                                        Height="24">
                                                    <Path Classes="NavIcon" Data="M13,9H11V7H13M13,17H11V11H13M12,2A10,10 0 0,0 2,12A10,10 0 0,0 12,22A10,10 0 0,0 22,12A10,10 0 0,0 12,2Z" />
                                                </Canvas>
                                            </Viewbox>
                                            
                                            <Label FontSize="16"
                                                    Margin="5"
                                                    FontWeight="Regular"
                                                    Content = "{x:Static assets:Resources.AboutNavbarItem}"/>
                                        </StackPanel>
                                    </Border>
                                </StackPanel>

                                <Border Grid.Row="1"
                                        CornerRadius="25"
                                        VerticalAlignment="Bottom"
                                        HorizontalAlignment="Center"
                                        Background="{x:Static assets:Themes.GlobalColor2}"
                                        Margin="0 5"
                                        IsVisible="{Binding InstanceExtensionVisibility}">
                                    <StackPanel Margin="20 0"
                                                Orientation="Horizontal">
                                        <Border x:Name="BorderAddTrack"
                                                Margin="5"
                                                BorderThickness="0"
                                                CornerRadius="10"
                                                HorizontalAlignment="Left"
                                                VerticalAlignment="Center">
                                            <i:Interaction.Behaviors>
                                                <ia:EventTriggerBehavior EventName="Tapped">
                                                    <ia:InvokeCommandAction Command="{Binding AddInstanceCommand}" CommandParameter='track'/>
                                                </ia:EventTriggerBehavior>  
                                            </i:Interaction.Behaviors>
                                            <Border.Styles>
                                                <Style Selector="Border#BorderAddTrack">
                                                    <Setter Property="Background" Value="{x:Static assets:Themes.Transparent}"/>
                                                </Style>

                                                <Style Selector="Border#BorderAddTrack:pointerover" >
                                                    <Setter Property="Background" Value="{x:Static assets:Themes.MainWindowSearchButton}"/>
                                                </Style>
                                            </Border.Styles>

                                            <PathIcon HorizontalAlignment="Center"
                                                    VerticalAlignment="Center"
                                                    Width="30"
                                                    Height="30"
                                                    Margin="5 3"
                                                    Foreground="{x:Static assets:Themes.MainColor}"
                                                    Data="M17 9V12H14V14H17V17H19V14H22V12H19V9H17M9 3V13.55C8.41 13.21 7.73 13 7 13C4.79 13 3 14.79 3 17S4.79 21 7 21 11 19.21 11 17V7H15V3H9Z"/>
                                        </Border>

                                        <Border x:Name="BorderAddArtist"
                                                Margin="5"
                                                BorderThickness="0"
                                                CornerRadius="10"
                                                HorizontalAlignment="Left"
                                                VerticalAlignment="Center">
                                            <i:Interaction.Behaviors>
                                                <ia:EventTriggerBehavior EventName="Tapped">
                                                    <ia:InvokeCommandAction Command="{Binding AddInstanceCommand}" CommandParameter='playlist'/>
                                                </ia:EventTriggerBehavior>  
                                            </i:Interaction.Behaviors>
                                            <Border.Styles>
                                                <Style Selector="Border#BorderAddArtist">
                                                    <Setter Property="Background" Value="{x:Static assets:Themes.Transparent}"/>
                                                </Style>

                                                <Style Selector="Border#BorderAddArtist:pointerover" >
                                                    <Setter Property="Background" Value="{x:Static assets:Themes.MainWindowSearchButton}"/>
                                                </Style>
                                            </Border.Styles>

                                            <PathIcon HorizontalAlignment="Center"
                                                    VerticalAlignment="Center"
                                                    Width="30"
                                                    Height="30"
                                                    Margin="5 3"
                                                    Foreground="{x:Static assets:Themes.MainColor}"
                                                    Data="M3 16H10V14H3M18 14V10H16V14H12V16H16V20H18V16H22V14M14 6H3V8H14M14 10H3V12H14V10Z"/>
                                        </Border>

                                        <Border x:Name="BorderAddPlaylist"
                                                Margin="5"
                                                BorderThickness="0"
                                                CornerRadius="10"
                                                HorizontalAlignment="Left"
                                                VerticalAlignment="Center">
                                            <i:Interaction.Behaviors>
                                                <ia:EventTriggerBehavior EventName="Tapped">
                                                    <ia:InvokeCommandAction Command="{Binding AddInstanceCommand}" CommandParameter='artist'/>
                                                </ia:EventTriggerBehavior>  
                                            </i:Interaction.Behaviors>
                                            <Border.Styles>
                                                <Style Selector="Border#BorderAddPlaylist">
                                                    <Setter Property="Background" Value="{x:Static assets:Themes.Transparent}"/>
                                                </Style>

                                                <Style Selector="Border#BorderAddPlaylist:pointerover" >
                                                    <Setter Property="Background" Value="{x:Static assets:Themes.MainWindowSearchButton}"/>
                                                </Style>
                                            </Border.Styles>

                                            <PathIcon HorizontalAlignment="Center"
                                                    VerticalAlignment="Center"
                                                    Width="30"
                                                    Height="30"
                                                    Margin="5 3"
                                                    Foreground="{x:Static assets:Themes.MainColor}"
                                                    Data="M530 10086 c0 -649 2 -677 65 -852 183 -513 786 -971 1728 -1313 867
                                                        -314 1957 -495 2727 -452 927 52 1967 302 2704 649 389 183 677 373 897 592
