    <Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:Ild_Music.ViewModels"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        
        xmlns:conv="clr-namespace:Ild_Music.Converters"
        xmlns:v="clr-namespace:Ild_Music.Views"
        xmlns:assets="clr-namespace:Ild_Music.Assets"
        xmlns:i="clr-namespace:Avalonia.Xaml.Interactivity;assembly=Avalonia.Xaml.Interactivity"
        xmlns:ia="clr-namespace:Avalonia.Xaml.Interactions.Core;assembly=Avalonia.Xaml.Interactions"

        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="Ild_Music.Views.MainWindow"
        x:DataType="vm:MainWindowViewModel"
        Icon="/Assets/ild-music-logo.ico"
        SystemDecorations="None"
        WindowStartupLocation="CenterScreen"
        DragDrop.AllowDrop="True">

    <Window.Resources>
        <conv:IconConverter x:Key="IconConverter"/>
        <conv:InstanceConverter x:Key="InstanceConverter"/>
        <conv:IndicatorConverter x:Key="IndicatorConverter"/>
        <conv:ListActivityConverter x:Key="ListActivityConverter"/>
        <conv:PlayerToggleButtonConverter x:Key="PlayerToggleButtonConverter"/>
    </Window.Resources>

    <Window.Styles>
        <Style Selector="Border.WindowButton Canvas Path">
            <Setter Property="Fill" Value="{x:Static assets:Themes.MainWindowButton}"/>
        </Style>
        <Style Selector="Border.WindowButton:pointerover Canvas Path">
            <Setter Property="Fill" Value="{x:Static assets:Themes.MainWindowButtonOver}"/>
        </Style>

        <Style Selector="Border.NavBarItem">
            <Setter Property="Background" Value="{x:Static assets:Themes.Transparent}"/>
        </Style>
        <Style Selector="Border.NavBarItem:pointerover">
            <Setter Property="Background" Value="{x:Static assets:Themes.MainWindowNavBar}"/>
        </Style>

        <Style Selector="Border.PlayerButton Viewbox Canvas Path">
            <Setter Property="Fill" Value="{x:Static assets:Themes.MainWindowButton}"/>
        </Style>
        <Style Selector="Border.PlayerButton:pointerover Viewbox Canvas Path">
            <Setter Property="Fill" Value="{x:Static assets:Themes.MainWindowButtonOver}"/>
        </Style>
        <Style Selector="Border.PlayerButton:pointerpressed Viewbox Canvas Path">
            <Setter Property="Fill" Value="{x:Static assets:Themes.MainWindowButtonOver}"/>
        </Style>

        <Style Selector="Grid.CurrentTrackArea Ellipse.Indicator">
            <Setter Property="Fill" Value="{x:Static assets:Themes.Transparent}"/>
        </Style>
        <Style Selector="Grid.CurrentTrackArea:pointerover Ellipse.Indicator">
            <Setter Property="Fill" Value="{x:Static assets:Themes.MainColor}"/>
        </Style>

        <Style Selector="Border.SearchButton PathIcon">
            <Setter Property="Foreground" Value="{x:Static assets:Themes.MainWindowSearchButton}"/>
        </Style>
        <Style Selector="Border.SearchButton:pointerover PathIcon">
            <Setter Property="Foreground" Value="{x:Static assets:Themes.MainWindowSearchButtonOver}"/>
        </Style>

        <Style Selector="Border.PlayerButton">
            <Setter Property="Background" Value="{x:Static assets:Themes.Transparent}"/>
        </Style>

        <Style Selector="Window">
            <Setter Property="Template">
                <ControlTemplate>
                    <Grid x:Name="MainGrid"
                          Background="{x:Static assets:Themes.MainWindowBackground}">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="auto"/>
                        </Grid.RowDefinitions>
                        
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        
                        <Border Grid.Column="0"
                                Grid.ColumnSpan="3"
                                Grid.Row="0"
                                Grid.RowSpan="3"
                                IsVisible="{Binding IsActivePopup}"
                                Background="Transparent"
                                PointerPressed="OnHidePopups"
                                ZIndex="2"/>

                        <Border x:Name="VolumeArea"
                                Classes="volumePopup"
                                Classes.open="{Binding VolumeSliderOpen}"
                                ZIndex="3"
                                Grid.Row="0"
                                Grid.RowSpan="3"
                                CornerRadius="5,5,0,0"
                                Background="{x:Static assets:Themes.MainWindowVolumeArea}"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Bottom">
                            <Border.Styles>
                                <Style Selector="Border.volumePopup">
                                    <Setter Property="Width" Value="0"/>
                                    <Setter Property="Height" Value="0"/>
                                </Style>

                                <Style Selector="Border.volumePopup Slider.volumeSlider">
                                    <Setter Property="Width" Value="0"/>
                                    <Setter Property="Height" Value="0"/>
                                </Style>

                                <Style Selector="Border.volumePopup.open">
                                    <Setter Property="Width" Value="36"/>
                                    <Setter Property="Height" Value="100"/>
                                </Style>

                                <Style Selector="Border.volumePopup.open Slider.volumeSlider">
                                    <Setter Property="Width" Value="10"/>
                                    <Setter Property="Height" Value="100"/>
                                </Style>
                            </Border.Styles>

                            <Slider x:Name="VolumeSlider"
                                    Classes="volumeSlider"
                                    Orientation="Vertical"
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Bottom"
                                    Maximum="{Binding MaxVolume, Mode=OneWay}"
                                    Minimum="{Binding MinVolume, Mode=OneWay}"
                                    Value="{Binding CurrentVolume, Mode=TwoWay}">
                                <Slider.Resources>
                                    <x:Double x:Key="SliderVerticalThumbWidth">10</x:Double>
                                    <x:Double x:Key="SliderVerticalThumbHeight">10</x:Double>
                                    <x:Double x:Key="SliderVerticalWidth">5</x:Double>
                                    <GridLength x:Key="SliderPreContentMargin">0</GridLength>
                                    <GridLength x:Key="SliderPostContentMargin">0</GridLength>
                                </Slider.Resources>

                                <Slider.Styles>
                                    <Style Selector="Slider.volumeSlider /template/ RepeatButton#PART_DecreaseButton">
                                        <Setter Property="Background" Value="{x:Static assets:Themes.MainColor}"/>
                                        <Setter Property="Margin" Value="0, 0, 0, 10"/>
                                    </Style>

                                    <Style Selector="Slider.volumeSlider /template/ RepeatButton#PART_IncreaseButton">
                                        <Setter Property="Background" Value="{x:Static assets:Themes.MainWindowNavBar}"/>
                                        <Setter Property="Margin" Value="0, 10, 0, 0"/>
                                    </Style>         

                                    <Style Selector="Slider.volumeSlider Thumb">
                                        <Setter Property="Template">
                                            <ControlTemplate>
                                                <Ellipse Width="10" Height="10" Fill="{x:Static assets:Themes.MainColor}" />
                                            </ControlTemplate>
                                        </Setter>
                                    </Style>                                     
                                </Slider.Styles>
                            </Slider>
                        </Border>
                                              
                        <Border x:Name="CurrentInstanceArea"
                                ZIndex="3"
                                Height="100"
                                Width="350"
                                Grid.Row="0"
                                Grid.RowSpan="3"
                                CornerRadius="10"
                                Background="{x:Static assets:Themes.MainWindowVolumeArea}"
                                HorizontalAlignment="Right"
                                VerticalAlignment="Bottom"
                                Classes="currentInstanceAreaPopup"
                                IsVisible="{Binding IsActiveCurrentTab}">

                            <Grid Grid.Column="0">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="auto"/>
                                </Grid.ColumnDefinitions>
   
                                <Border Grid.Column="0"
                                        Width="70"
                                        Height="70"
                                        Margin="10 5"
                                        CornerRadius="10"
                                        Background="Transparent">
                                    <Border.Background>
                                        <ImageBrush Source="{Binding CurrentTrack, Converter={StaticResource IconConverter}, ConverterParameter=track_icon}"/>
                                    </Border.Background>
                                    <i:Interaction.Behaviors>
                                        <ia:EventTriggerBehavior EventName="Tapped">
                                            <ia:InvokeCommandAction Command="{Binding ResolveCurrentInstanceCommand}"/>
                                        </ia:EventTriggerBehavior>  
                                    </i:Interaction.Behaviors>
                                </Border>
                                
                                <StackPanel Grid.Column="1">
                                    <TextBlock Margin="10,20,0,0"
                                               Text="{Binding CurrentTrack, Converter={StaticResource InstanceConverter}, ConverterParameter=name}"  
                                               FontSize="16"
                                               FontWeight="UltraBlack"
                                               Foreground="White"
                                               HorizontalAlignment="Left"
                                               VerticalAlignment="Bottom"
                                               TextAlignment="Center"/>
                                               
                                    <TextBlock Margin="0,2,0,3"
                                               Text="{Binding CurrentTrack, Converter={StaticResource InstanceConverter}, ConverterParameter=year}"
                                               FontSize="12"
                                               FontWeight="Light"
                                               Foreground="White"
                                               HorizontalAlignment="Left"
                                               VerticalAlignment="Bottom"
                                               TextAlignment="Center"/>

                                    <TextBlock Margin="0,3,0,2"
                                               Text="{Binding CurrentTrack, Converter={StaticResource InstanceConverter}, ConverterParameter=desc}"
                                               FontSize="14"
                                               FontWeight="Light"
                                               Foreground="White"
                                               HorizontalAlignment="Left"
                                               VerticalAlignment="Bottom"
                                               TextAlignment="Center"/>
                                </StackPanel>
                                
                                <Border Grid.Column="2" 
                                        Width="50"
                                        Height="50"
                                        HorizontalAlignment="Right"
                                        VerticalAlignment="Top"
                                        Margin="2, -5">
                                    <i:Interaction.Behaviors>
                                        <ia:EventTriggerBehavior EventName="Tapped">
                                            <ia:InvokeCommandAction Command="{Binding HideCurrentInstanceTabCommand}"/>
                                        </ia:EventTriggerBehavior>  
                                    </i:Interaction.Behaviors>
                                    <PathIcon Foreground="{x:Static assets:Themes.MainWindowSearchButtonOver}"
                                              Background="Transparent"
                                              VerticalAlignment="Stretch"
                                              HorizontalAlignment="Stretch"
                                              Data="M20,14H4V10H20"/>
                               </Border>
                            </Grid>
                        </Border>

                        <Border x:Name="SearchArea"
                                ZIndex="3"
                                Grid.Row="0"
                                Grid.RowSpan="3"
                                CornerRadius="10"
                                Background="{x:Static assets:Themes.MainWindowSearchArea}"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Top"
                                Classes="searchPopup"
                                Height="200"
                                IsVisible="{Binding SearchAreaOpen}">
                            <ScrollViewer Width="{Binding #SearchBar.Width}"
                                          HorizontalAlignment="Stretch"
                                          VerticalAlignment="Bottom"
                                          HorizontalScrollBarVisibility="Disabled"
                                          VerticalScrollBarVisibility="Auto">
                                <ListBox ItemsSource="{Binding SearchItems}"
                                          SelectedItem="{Binding SearchItem}"
                                          HorizontalAlignment="Stretch"
                                          ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                                          ScrollViewer.VerticalScrollBarVisibility="Visible"
                                          Background="{x:Static assets:Themes.Transparent}">
                                     <ListBox.ItemsPanel>
                                        <ItemsPanelTemplate>
                                            <StackPanel Orientation="Vertical"/>
                                        </ItemsPanelTemplate>
                                     </ListBox.ItemsPanel>

                                     <ListBox.Styles>
                                        <Style Selector="ListBoxItem">
                                            <Setter Property="BorderBrush" Value="Transparent"/>
                                            <Setter Property="BorderThickness" Value="0"/>
                                            <Setter Property="CornerRadius" Value="{Binding #SearchArea.CornerRadius}"/>
                                            <Setter Property="Margin" Value="0"/>
                                            <Setter Property="Padding" Value="0"/>
                                            <Setter Property="HorizontalContentAlignment" Value="Stretch"/>

                                            <Setter Property="Template">
                                                <ControlTemplate>
                                                    <Grid>
                                                        <Border x:Name="Bd"
                                                                Margin="{TemplateBinding Margin}"
                                                                CornerRadius="{TemplateBinding CornerRadius}"
                                                                Background="{TemplateBinding Background}"
                                                                BorderThickness="{TemplateBinding BorderThickness}"
                                                                BorderBrush="{TemplateBinding BorderBrush}"
                                                                Padding="{TemplateBinding Padding}">
                                                        <ContentPresenter Name="PART_ContentPresenter"
                                                                          HorizontalContentAlignment="{TemplateBinding HorizontalContentAlignment}"
                                                                          VerticalContentAlignment="{TemplateBinding VerticalContentAlignment}"
                                                                          ContentTemplate="{TemplateBinding ContentTemplate}"
                                                                          Content="{TemplateBinding Content}"/>
                                                        </Border>
                                                    </Grid>
                                                </ControlTemplate>
                                            </Setter>
                                        </Style>

                                        <Style Selector="ListBoxItem:pointerover /template/ Border#Bd">
                                          <Setter Property="Background" Value="{x:Static assets:Themes.ListBoxOver}"/>
                                        </Style>

                                        <Style Selector="ListBoxItem:pointerover /template/ ContentPresenter">
                                            <Setter Property="Background" Value="{x:Static assets:Themes.Transparent}"/>
                                        </Style>

                                        <Style Selector="ListBoxItem:selected /template/ Border#Bd">
                                            <Setter Property="Background" Value="{x:Static assets:Themes.ListBoxSelected}"/>
                                        </Style>

                                        <Style Selector="ListBoxItem:selected /template/ ContentPresenter">
                                            <Setter Property="Background" Value="{x:Static assets:Themes.Transparent}"/>
                                        </Style>
                                
                                        <Style Selector="ListBoxItem:selected:focus /template/ Border#Bd">
                                            <Setter Property="Background" Value="{x:Static assets:Themes.ListBoxSelected}"/>
                                        </Style>

                                        <Style Selector="ListBoxItem:selected:focus /template/ ContentPresenter">
                                            <Setter Property="Background" Value="{x:Static assets:Themes.Transparent}"/>
                                        </Style>

                                        <Style Selector="ListBoxItem:selected:pointerover /template/ Border#Bd">
                                          <Setter Property="Background" Value="{x:Static assets:Themes.ListBoxSelected}"/>
                                        </Style>

                                        <Style Selector="ListBoxItem:selected:pointerover /template/ ContentPresenter">
                                            <Setter Property="Background" Value="{x:Static assets:Themes.Transparent}"/>
                                        </Style>

                                        <Style Selector="ListBoxItem:selected:focus:pointerover /template/ Border#Bd">
                                            <Setter Property="Background" Value="{x:Static assets:Themes.ListBoxSelected}"/>
                                        </Style>

                                        <Style Selector="ListBoxItem:selected:focus:pointerover /template/ ContentPresenter">
                                            <Setter Property="Background" Value="{x:Static assets:Themes.Transparent}"/>
                                        </Style>
                                     </ListBox.Styles>
                                    
                                     <i:Interaction.Behaviors>
                                         <ia:EventTriggerBehavior EventName="DoubleTapped">
                                             <ia:InvokeCommandAction Command="{Binding SelectSearchItemCommand}"/>
                                         </ia:EventTriggerBehavior>  
                                     </i:Interaction.Behaviors>
                                     <ListBox.ItemTemplate>
                                        <DataTemplate>                                     
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions> 
                                            
                                            <Border Grid.Column="0"
                                                    Width="40"
                                                    Height="40"
                                                    Margin="5"
                                                    CornerRadius="5"                                        
                                                    HorizontalAlignment="Stretch"
                                                    VerticalAlignment="Stretch">
                                                <Border.Background>
                                                    <ImageBrush Stretch="UniformToFill" Source="{Binding ., Converter={StaticResource IconConverter}, ConverterParameter=dto_icon}"/>
                                                </Border.Background>
                                            </Border>

                                            <TextBlock Grid.Column="1"
                                                       Margin="5, 0" 
                                                       HorizontalAlignment="Stretch"
                                                       VerticalAlignment="Center"
                                                       Foreground="White"
                                                       FontSize="14"
                                                       FontWeight="Medium"
                                                       Text="{Binding ., Converter={StaticResource InstanceConverter}, ConverterParameter=name}"
                                                       TextAlignment="Left"/>
                                        </Grid>
                                        </DataTemplate>
                                     </ListBox.ItemTemplate>
                                </ListBox>
                            </ScrollViewer>
                        </Border>

                        <!--Main Area-->
                        <Grid Grid.Row="0"
                              Grid.ColumnSpan="2"
                              ColumnDefinitions = "auto, *"
                              Background="Transparent">
                            <!--NavBar-->
                            <Grid x:Name="NavBar"
                                  IsVisible="{Binding BorderComponentsVisiblity}" 
                                  Grid.Column="0" 
                                  Background="{x:Static assets:Themes.MainWindowNavBarBackground}"
                                  HorizontalAlignment="Stretch">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="auto"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>
                                
                                <!--NavBarItems-->
                                <StackPanel Grid.Row="0"
                                            VerticalAlignment="Top"
                                            HorizontalAlignment="Center">
                                    <Viewbox Classes="vb"
                                             Width="170"
                                             Height="25"
                                             Margin="40, 10, 10, 10"
                                             HorizontalAlignment="Stretch"
                                             VerticalAlignment="Top">
                                        <Canvas Width="170" Height="30">
                                            <Path Fill="{x:Static assets:Themes.MainColor}" Data="M 30.00,0.00
                                                    C 30.00,0.00 40.00,0.00 40.00,0.00
                                                        40.00,0.00 40.00,34.00 40.00,34.00
