                                                        M9600 7200 l0 -800 -800 0 -800 0 0 -535 0 -535 800 0 800 0 0 -800
                                                        0 -800 535 0 535 0 0 800 0 800 800 0 800 0 0 535 0 535 -800 0 -800 0 0 800
                                                        0 800 -535 0 -535 0 0 -800z
                                                        M4507 6385 c-311 -44 -616 -158 -871 -325 -522 -342 -851 -855 -952
