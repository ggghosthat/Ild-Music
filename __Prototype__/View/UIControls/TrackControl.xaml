<UserControl x:Class="Ild_Music_MVVM_.View.UIControls.TrackControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Ild_Music_MVVM_.View.UIControls"
             mc:Ignorable="d" 
             d:DesignHeight="510" d:DesignWidth="896">
    <Grid Grid.Row="1" Grid.Column="1" Background="#2f35af" Margin="5,0,0,0">
        <Grid.RowDefinitions>
        </Grid.RowDefinitions>

        <StackPanel x:Name="Area" Margin="0,0,0,33">

            <StackPanel x:Name="TrackPanel"
                            Orientation="Horizontal"
                            Height="300"
                            Width="891"
                            Margin="0,100"
                            Background="#272daa">
                <Image x:Name="TrackImage"
                           Width="391"
                           HorizontalAlignment="Center"
                           Margin="250 0 250 0"
                           Stretch="Fill"/>
            </StackPanel>

        </StackPanel>
    </Grid>

</UserControl>
