<Application x:Class="Ild_Music_MVVM_.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:Ild_Music_MVVM_"
             xmlns:views="clr-namespace:Ild_Music_MVVM_.View.UIControls"
             xmlns:viewmodel="clr-namespace:Ild_Music_MVVM_.ViewModel.VM"
             StartupUri="View/StartWindow.xaml">
    <Application.Resources>
        <DataTemplate DataType="{x:Type viewmodel:StartViewModel}">
            <views:StartControl/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type viewmodel:FactoryViewModel}">
            <views:FactoryConrol/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type viewmodel:ListViewModel}">
            <views:ListControl/>
        </DataTemplate>


