<UserControl x:Class="Ild_Music_MVVM_.View.UIControls.ListControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Ild_Music_MVVM_.View.UIControls"
             mc:Ignorable="d" 
              d:DesignHeight="450" d:DesignWidth="800">
    
    <Grid Background="#2f35af">
        <Grid.RowDefinitions>
        </Grid.RowDefinitions>
        <StackPanel x:Name="Area" Margin="0,0,0,0">

            <TextBlock Name="lblPlaylistName"
                           VerticalAlignment="Top"
                           HorizontalAlignment="Left"
                           FontSize="35"
                           FontWeight="Medium"
                           Foreground="White"
                           Text="Collection"
                           Margin="10"/>

            <StackPanel Name="controlButtons" 
                            HorizontalAlignment="Right"
                            Orientation="Horizontal"
                            Margin="0,0,15,0" Width="769">

                <StackPanel x:Name="Edit"
                            Height="25"
                            Width="25"
                            Background="Transparent"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Center"
                            Margin="10 0 10 0">
                    <Border x:Name="brEdit"
                        CornerRadius="5"
                        Background="Transparent">
                        <Image Stretch="Uniform"/>
                    </Border>
                </StackPanel>

                <TextBox x:Name="txtName"
                                 Style="{DynamicResource ResourceKey=Textbox1}"
                                 Foreground="White"
                                 HorizontalAlignment="Left"
                                 FontWeight="Medium"
                                 Width="367"
                                 Height="27"
                                 Margin="0,0,20,0"/>

                <StackPanel x:Name="Add"
                            Height="25"
                            Width="25"
                            Background="Transparent"
                            HorizontalAlignment="Right"
                            VerticalAlignment="Center"
                            Margin="10 0 10 0">
                    <Border x:Name="brAdd"
                                CornerRadius="5"
                                Background="Transparent">
                        <Image  Stretch="Uniform" RenderTransformOrigin="72.8,16.898"/>
                    </Border>
                </StackPanel>

                <StackPanel x:Name="Delete"
                            Height="25"
                            Width="25"
                            Background="Transparent"
                            HorizontalAlignment="Right"
                            VerticalAlignment="Center"
                            Margin="10 0 10 0">
                    <Border x:Name="brDelete"
                                CornerRadius="5"
                                Background="Transparent">
                        <Image  Stretch="Uniform"/>
                    </Border>
                </StackPanel>

                <StackPanel Name="slection">
                    <Button x:Name="btn"
                        Visibility ="Collapsed"
                        Height="25" 
                        Width="45" 
                        BorderThickness="0" 
                        VerticalAlignment="Bottom"
                        Style="{StaticResource CardButton}" 
                        Content="OK"
                        BorderBrush="Transparent"
                        FontWeight="ExtraBold"
                        Background="#d32341"
                        Foreground="White">
                    </Button>
                </StackPanel>
            </StackPanel>

            <ListView x:Name="lvList" 
                          Margin="10,10,10,0"
                          Height="300"
                          Style="{StaticResource listviewStyle1}"
                          Foreground="White"
                          BorderThickness="0"
                          FontSize="15">

                <ListView.Resources>
                    <Style TargetType="GridViewColumnHeader">
                        <Setter Property="Visibility" Value="Collapsed" />
                    </Style>
                </ListView.Resources>

                <ListView.ItemContainerStyle>
                    <Style TargetType="ListViewItem">
                        <!--<EventSetter Event="MouseDoubleClick" Handler="ListViewItem_MouseDoubleClick"/>-->
                    </Style>
                </ListView.ItemContainerStyle>
            </ListView>
        </StackPanel>
    </Grid>
</UserControl>
